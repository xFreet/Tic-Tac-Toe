<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ga.jkowalczyk.tictactoe.TicTacToeActivity"
    android:orientation="vertical"
    android:background="#29292b"
    android:layout_weight="100">
<ImageView
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:src="@drawable/znakx4"
    android:layout_margin="5dp"
    android:layout_weight="30"/>
    <TextView   android:layout_width="match_parent"
        android:layout_height="51dp"
        android:text="TIC TAC TOE"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="10"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical|center_horizontal"
        android:id="@+id/title"
        android:textSize="100dp"
        android:textColor="#00f76e"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="6"
        android:id="@+id/textview"
        android:text="ONE PLAYER"
        android:textStyle="bold"
        android:textColor="#FFF"
        android:layout_gravity="center"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="80dp"
        android:onClick="one_player" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="6"
        android:id="@+id/textview2"
        android:text="TWO PLAYER"
        android:textStyle="bold"
        android:textColor="#FFF"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="80dp"
        android:onClick="two_player"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="6"
        android:id="@+id/textview4"
        android:text="ABOUT"
        android:textStyle="bold"
        android:textColor="#FFF"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="80dp"
        android:onClick="about"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="6"
        android:id="@+id/textview3"
        android:text="QUIT"
        android:textStyle="bold"
        android:textColor="#FFF"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="80dp"
        android:onClick="quit"
        />

</LinearLayout>
